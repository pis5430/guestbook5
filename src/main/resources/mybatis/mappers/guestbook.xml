<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="guestbook">

	<!-- guestVo Map -->
	<resultMap id="resultMapGuestVo" type="com.javaex.vo.GuestVo" >
	    <result column="no" property="no" />
	    <result column="name" property="name" />
	    <result column="password" property="password" />
	    <result column="content" property="content" />
	    <result column="reg_date" property="reg_date" />
	</resultMap>
	
	<!-- 전체리스트 가져오기 resultMap -->
	<select id="selectList" resultMap="resultMapGuestVo">
	    <![CDATA[
			select no,
				   name,
				   password,
				   content,
				   to_char(reg_date, 'YYYY-MM-DD HH:MI:SS') "date"
			from guestbook	   	
			order by no desc
	    ]]>
	</select>	

	<!-- 전체 리스트 가져오기 vo -->
	<select id="selectList2" resultType="com.javaex.vo.GuestVo">
		<![CDATA[
			select no,
				   name,
				   password,
				   content,
				   to_char(reg_date, 'YYYY-MM-DD HH:MI:SS') "date"
			from guestbook	   	
			order by no desc
		]]>	
	</select>
	
	<!-- 저장 -->
	<insert id="insert" parameterType="guestVo">
		<![CDATA[
			insert into guestbook
			values (seq_guest_no.nextval,
			        #{name},
			        #{password},
			        #{content},
			        sysdate)
	     ]]>
	</insert>
	
		
	<!-- 삭제 -->
	<delete id="delete" parameterType="guestVo" >
		<![CDATA[
			delete from guestbook
			where no = #{no}
			and password = #{password}	
		]]>	
	</delete>
	
	

	

</mapper>
